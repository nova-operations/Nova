{
    "version": "v1",
    "name": "Nova Agent",
    "services": [
        {
            "name": "nova",
            "source": {
                "repo": "nova-operations/Nova"
            },
            "variables": {
                "TELEGRAM_BOT_TOKEN": {
                    "description": "Get from @BotFather on Telegram",
                    "required": true
                },
                "TELEGRAM_USER_WHITELIST": {
                    "description": "Comma-separated Telegram User IDs allowed to use the bot",
                    "required": false
                },
                "OPENROUTER_API_KEY": {
                    "description": "Your OpenRouter API Key",
                    "required": true
                },
                "DATABASE_URL": "${{ postgres.DATABASE_URL }}",
                "GITHUB_TOKEN": {
                    "description": "Your GitHub Personal Access Token (classic with repo scope or fine-grained with contents/metadata)",
                    "required": true
                },
                "GITHUB_REPO": "nova-operations/Nova",
                "AGENT_MODEL": "google/gemini-2.0-flash-001",
                "SUBAGENT_MODEL": "google/gemini-2.0-flash-001"
            },
            "deploy": {
                "numReplicas": 1,
                "restartPolicy": "ON_FAILURE"
            },
            "volumes": [
                {
                    "mountPath": "/app/data",
                    "name": "nova-data"
                }
            ]
        }
    ],
    "databases": [
        {
            "type": "postgres",
            "name": "nova-db"
        }
    ]
}
