{
    "version": "v1",
    "name": "Nova Agent",
    "services": [
        {
            "name": "nova",
            "source": {
                "repo": "nova-operations/Nova"
            },
            "variables": {
                "TELEGRAM_BOT_TOKEN": {
                    "description": "Get from @BotFather on Telegram",
                    "required": true
                },
                "OPENROUTER_API_KEY": {
                    "description": "Your OpenRouter API Key",
                    "required": true
                },
                "DATABASE_URL": "${{ postgres.DATABASE_URL }}",
                "GITHUB_REPO": "nova-operations/Nova",
                "AGENT_MODEL": "google/gemini-2.0-flash-001",
                "SUBAGENT_MODEL": "google/gemini-2.0-flash-001"
            },
            "deploy": {
                "numReplicas": 1,
                "restartPolicy": "ON_FAILURE"
            }
        }
    ],
    "databases": [
        {
            "type": "postgres",
            "name": "nova-db"
        }
    ]
}