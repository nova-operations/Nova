{
    "name": "Nova Agent",
    "description": "A self-improving AI agent running on Railway with PostgreSQL memory and persistent skills.",
    "icon": "https://railway.app/illustrations/worker.svg",
    "services": {
        "nova": {
            "name": "Nova Bot",
            "source": {
                "repo": "Morty-pilot/Nova"
            },
            "variables": {
                "DATABASE_URL": "${{postgres.DATABASE_URL}}",
                "TELEGRAM_BOT_TOKEN": "REPLACE_ME",
                "OPENROUTER_API_KEY": "REPLACE_ME",
                "GITHUB_TOKEN": "",
                "GITHUB_REPO": "Morty-pilot/Nova"
            },
            "deploy": {
                "numReplicas": 1,
                "restartPolicy": "ON_FAILURE"
            },
            "mountPath": "/app/data"
        }
    },
    "databases": {
        "postgres": {
            "name": "nova-db",
            "plan": "standard"
        }
    }
}